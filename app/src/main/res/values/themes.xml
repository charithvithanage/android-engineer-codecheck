<resources>
    <!-- Base application theme. -->
    <style name="Theme.AndroidEngineerCodeCheck" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Card View Style-->
    <style name="CardViewBGStyle" parent="CardView">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <!-- Custom Dialog Style-->
    <style name="DialogTitleStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DialogMessageStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Progress Dialog Style-->
    <style name="ProgressBarStyle" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorAccent">@color/accent_color</item>
    </style>

    <style name="FragmentTitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GrayButtonStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="ContentLabelStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputLayoutNoBorder" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorIconDrawable">@null</item>
        <item name="errorIconTint">@null</item>
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundMode">none</item>
        <item name="endIconTint">@android:color/darker_gray</item>
        <item name="hintTextColor">@android:color/darker_gray</item>
        <item name="startIconDrawable">@android:drawable/ic_menu_search</item>
        <item name="startIconTint">@android:color/darker_gray</item>
        <item name="endIconMode">clear_text</item>
    </style>

    <style name="SearchInputTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TransparentToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SideMenuTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Action Bar Style -->
    <style name="ActionBarTitleStyle">
        <item name="android:textColor">@color/primary_color_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
    </style>


    <style name="LandingPageTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="LandingPageContentStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LanguageSelectedTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LanguageUnSelectedTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Recycle View Style -->
    <style name="RoundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RepoNameStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="RepoTypeStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="recycleViewLabelStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="recycleViewContextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="recycleViewLargeContextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>